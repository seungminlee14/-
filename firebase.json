{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      { "source": "/admin/punishment", "destination": "/admin-punishment.html" },
      { "source": "/appeal", "destination": "/appeal.html" },
      { "source": "/community/**", "destination": "/community.html" }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
